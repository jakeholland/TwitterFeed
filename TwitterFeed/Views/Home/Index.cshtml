@{
    ViewBag.Title = "Twitter Feed";
}

<!--Left Sidebar-->
<div style="color:#F47F24;" class="col-md-4 lt-sidebar" id="lt-header">
    <h1 data-bind="text:title"></h1>
    <h2 data-bind="text:message"></h2>
    <!---<div class="footer-logo">
        <a href="http://www.education.illinois.edu"><img alt="College of Education" src="~/img/wr.png"></a>
    </div>
        -->
</div>

<!--Right Sidebar-->
<div data-bind="foreach: {data: tweets, afterAdd: updateSize}" class="col-md-8 tweets-container">
    <div class="well twitter-article" data-bind="attr: {'id': id }">
        <div class="media">
            <a class="pull-left" href="#">
                <img class="media-object user-image" data-bind="attr: { src: imageURL }" />
            </a>
            <div class="media-body">
                <h2 class="media-heading" data-bind="text: name"></h2>
                <h4 class="media-heading" style="color: #003C7D;" data-bind="text: handle"></h4>
                <h3 data-bind="text: tweetBody"></h3>
                <!-- ko if: mediaURL -->
                <img class="tweet-image" data-bind="attr: {src: mediaURL}" />
                <!-- /ko -->
            </div>
        </div>
    </div>
</div>

